                filebrowserUploadUrl: '@Url.Content("~/file/upload")',
                filebrowserBrowseUrl: '@Url.Content("~/file/browser?t=all")',
                filebrowserWindowWidth : 500,
                filebrowserWindowHeight : 400
            });
    });
  
